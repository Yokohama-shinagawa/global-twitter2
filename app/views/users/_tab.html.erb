<div class="row">
	<div class="col-md-3">
	    <%= link_to user_path(@user) do %>
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3><%= @user.name %></h3>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-md-9">
	    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">

　    
            
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#user-menu">
	  			<span class="sr-only">Toggle navigation</span>
	  			<span class="icon-bar"></span>
	  			<span class="icon-bar"></span>
	  			<span class="icon-bar"></span>
	  		</button>
            

          </div>

          
         
          <div class="collapse navbar-collapse user-menu" id="user-menu">
            <ul class="nav navbar-nav navbar-left">
            <li class="<%= 'active' if current_page?(user_path(@user)) %> ">
            	
                    	<%= link_to user_path(@user) do %>
                    		<p>ツイート</p>
                    		
                    	<% end %>
            </li>
            <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>">
						<%= link_to followings_user_path(@user) do %>
						   
	                			<p>フォロー</p>
	                			
	                		
	                	<% end %>
					</li>
					<li class="<%= 'active' if current_page?(followers_user_path(@user)) %>">
						<%= link_to followers_user_path(@user) do %>
						  
	                			<p>フォロワー</p>
							
	                	
	                	<% end %>
					</li>
			<li class="<%= 'active' if current_page?(fav_user_path(@user)) %>">
			<%= link_to fav_user_path(@user) do %>
				<p>いいね</p>
				
			<% end %>
		</li>
		
		<li>
			<% if current_user != @user %>
				<button type="button" class="btn btn-default navbar-btn">
					<% if current_user.following?(@user) %>
						<%= link_to "解除", user_relationships_path(@user), method: :delete %>
					<% else %>
						<%= link_to "フォロー", user_relationships_path(@user), method: :post %>
					<% end %>
				</button>
			<% end %>
		</li>

            </ul>
          </div>
      
        </div>
      </nav>
	</div>
</div>



